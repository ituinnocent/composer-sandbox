# ================================
# DOCKER SETTINGS
# ================================
APP_NAME=my-website
COMPOSE_PROJECT_NAME=mywebsite

# ================================
# DOMAIN SETTINGS
# ================================
# Primary domain (comma-separated for multiple domains)
WP_DOMAINS=my-website.local,www.my-website.local
WP_PRIMARY_DOMAIN=my-website.local

# Development domains (for different environments)
DEV_DOMAINS=dev.my-website.local
STAGING_DOMAINS=staging.my-website.local

# ================================
# WORDPRESS SETTINGS
# ================================
WP_ENV=development
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
WP_HOME=https://${WP_PRIMARY_DOMAIN}
WP_SITEURL=https://${WP_PRIMARY_DOMAIN}

# ================================
# DATABASE SETTINGS
# ================================
DB_HOST=mysql
DB_NAME=wordpress
DB_USER=wordpress
DB_PASSWORD=password
DB_ROOT_PASSWORD=rootpassword
DB_TABLE_PREFIX=wp_

# ================================
# SSL SETTINGS
# ================================
SSL_EMAIL=admin@${WP_PRIMARY_DOMAIN}
SSL_COUNTRY=US
SSL_STATE=California
SSL_LOCALITY=San Francisco
SSL_ORGANIZATION=My Company

# ================================
# ADMIN SETTINGS
# ================================
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=adminpassword
WP_ADMIN_EMAIL=admin@${WP_PRIMARY_DOMAIN}
